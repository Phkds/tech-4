//exercio 1
class Veiculo {
    mover() {
        console.log("O veículo está se movendo");
    }
}

class Carro extends Veiculo {
    mover() {
        console.log("O carro está dirigindo");
    }
}

class Bicicleta extends Veiculo {
    mover() {
        console.log("A bicicleta está pedalando");
    }
}

const carro = new Carro();
const bicicleta = new Bicicleta();

carro.mover();
bicicleta.mover();

// exercicio 2
abstract class FiguraGeometrica {
    abstract calcularArea(): number;
}

class Circulo extends FiguraGeometrica {
    constructor(private raio: number) {
        super();
    }
    calcularArea(): number {
        return Math.PI * this.raio * this.raio;
    }
}

class Quadrado extends FiguraGeometrica {
    constructor(private lado: number) {
        super();
    }
    calcularArea(): number {
        return this.lado * this.lado;
    }
}

class Triangulo extends FiguraGeometrica {
    constructor(private base: number, private altura: number) {
        super();
    }
    calcularArea(): number {
        return (this.base * this.altura) / 2;
    }
}

function imprimirAreas(figuras: FiguraGeometrica[]) {
    figuras.forEach(f => console.log("Área:", f.calcularArea()));
}

const figuras: FiguraGeometrica[] = [
    new Circulo(5),
    new Quadrado(4),
    new Triangulo(6, 3)
];

imprimirAreas(figuras);

// exercicio 3
class Pagamento {
    processar() {
        console.log("Processando pagamento...");
    }
}

class PagamentoCartao extends Pagamento {
    constructor(private numeroCartao: string) {
        super();
    }

    processar() {
        if (this.numeroCartao.length === 16) {
            console.log("Cartão validado. Pagamento processado no cartão.");
        } else {
            console.log("Número de cartão inválido!");
        }
    }
}

class PagamentoBoleto extends Pagamento {
    processar() {
        const codigo = "23790.12345.67890.123456.789000.123456";
        console.log("Boleto gerado: " + codigo);
    }
}

function processarPagamentos(pagamentos: Pagamento[]) {
    pagamentos.forEach(p => p.processar());
}

const pagamentos: Pagamento[] = [
    new PagamentoCartao("1234567890123456"),
    new PagamentoBoleto()
];

processarPagamentos(pagamentos);

// exercicio 4
class Animal {
    private energia: number = 50;

    protected alterarEnergia(valor: number) {
        this.energia += valor;
    }

    comer() {
        this.alterarEnergia(10);
    }

    statusEnergia() {
        console.log(`Energia atual: ${this.energia}`);
    }
}

class Leao extends Animal {
    comer() {
        console.log("O leão está caçando...");
        this.alterarEnergia(-20); 
        super.comer();
        console.log("O leão comeu após caçar!");
    }
}

class Passaro extends Animal {
    comer() {
        console.log("O pássaro está se alimentando...");
        super.comer(); 
    }
}

function acaoAnimais(animais: Animal[]) {
    animais.forEach(a => {
        a.comer();
        a.statusEnergia();
    });
}

const animais: Animal[] = [
    new Leao(),
    new Passaro()
];

acaoAnimais(animais);

// exercicio 5
abstract class Funcionario {
    constructor(
        private nome: string,
        private salario: number
    ) {}

    abstract calcularBonus(): number;

    getSalarioComBonus(): number {
        return this.salario + this.calcularBonus();
    }

    getNome(): string {
        return this.nome;
    }
}

class Gerente extends Funcionario {
    calcularBonus(): number {
        return this.getSalarioComBonus() * 0.10;
    }
}

class Operario extends Funcionario {
    calcularBonus(): number {
        return this.getSalarioComBonus() * 0.05;
    }
}

function calcularSalarioComBonus(funcionarios: Funcionario[]) {
    funcionarios.forEach(f => {
        console.log(`${f.getNome()}: R$ ${f.getSalarioComBonus()}`);
    });
}

const funcionarios: Funcionario[] = [
    new Gerente("Ana", 5000),
    new Operario("Carlos", 2500)
];

calcularSalarioComBonus(funcionarios);
